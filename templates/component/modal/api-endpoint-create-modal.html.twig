{% extends "component/modal/base-modal.html.twig" %}

{% block modal_body %}
    <form action="{{ path('app_entity_create') }}" method="post">
        <div class="modal-body">
            <input type="hidden" name="entity-class" value="{{ getApiEndpointClassName() }}" />
            <input type="hidden" name="success-redirect" value="{{ successRedirect }}" />
            <input type="hidden" name="success-redirect-type" value="path" />
            <input type="hidden" name="dummyApiId" value="{{ dummyApiId }}"/>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" name="path" id="endpointPath" placeholder="Path">
                <label for="path">Path</label>
            </div>
            <div class="mb-3">
                <select class="form-select" id="contentType" name="contentType" aria-label="select">
                    <option value="json" selected>JSON</option>
                    <option value="xml">XMl</option>
                </select>
            </div>
            <div class="form-floating">
                <select class="form-select multi-select" style="height: 200px" id="allowedMethods" name="allowedMethods[]" multiple aria-label="Floating multiple select">
                    <option value="get" selected>GET</option>
                    <option value="post">POST</option>
                    <option value="put">PUT</option>
                    <option value="patch">PATCH</option>
                    <option value="delete">DELETE</option>
                    <option value="propfind">PROPFIND</option>
                    <option value="view">VIEW</option>
                </select>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
{% endblock %}