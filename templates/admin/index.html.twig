{% extends 'base.html.twig' %}

{% block title %}Dummy Api | Overview{% endblock %}

{% block body %}
    <br>
    <h3>Dummy-Api's</h3>

    <div class="row justify-content-start mt-3">
        {% for api in getApis() %}
            <div class="col-4">
                <a href="{{ path('app_admin_api_detail', {id: api.id}) }}" class="card custom-card-link text-decoration-none">
                    <div class="card-body">
                        <h5 class="card-title text-dark">{{ api.name }}</h5>
                        <div class="card">
                            <div class="card-header text-dark">
                                Endpoints
                            </div>
                            <ul class="list-group list-group-flush">
                                {% for index, endpoint in api.dummyApiEndpoints %}
                                    {% if index < 3 %}
                                        <li class="list-group-item">{{ endpoint.path }}</li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
